	 <a href="" class="btn submit hommformviewer_export">Als CSV exportieren</a>
    </div>
{% endblock %}

{# The content of the CP Section#}
{% set content %}

{% set sidebar %}
<nav class="hommformviewer_nav">
<ul>
{% for key,table in craft.hommformviewer.tables %}

<li><a data-table="{{table}}"><span class="label">{{table}}</span></a></li>

{# class="sel" #}

{% endfor %}
</ul>
</nav>
{% endset %}
